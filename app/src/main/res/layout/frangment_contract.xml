<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shopee2021regular"
        android:gravity="center"
        android:text="Hãy điền thông tin của bạn và tôi sẽ phản hồi sớm nhất về vấn đề của bạn."
        android:textColor="@color/shoppecolor"
        android:textSize="18sp"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/name_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_product"
            android:fontFamily="@font/shopee2021regular"
            android:gravity="left"
            android:hint="Tên"
            android:padding="10dp"
            android:textColorHint="@color/shoppecolor1"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/email_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_product"
            android:fontFamily="@font/shopee2021regular"
            android:gravity="left"
            android:hint="Số Điện Thoại"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="@color/shoppecolor1"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/shopee2021regular"
        android:gravity="left"
        android:text="Vấn Đề Liên Lạc"
        android:textColor="@color/shoppecolor"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/type_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_product"
            android:drawableStart="@drawable/ic_baseline_subject_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/shopee2021regular"
            android:hint="Vui lòng chọn vấn đề liên lạc"
            android:padding="10dp"
            android:textColorHint="@color/shoppecolor1"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/content_contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_product"
            android:fontFamily="@font/shopee2021regular"
            android:gravity="left"
            android:hint="Nội Dung"
            android:lines="4"
            android:padding="10dp"
            android:textColorHint="@color/shoppecolor1"
            android:textSize="18dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/submit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_real"
            android:onClick="submit"
            android:padding="15dp"
            android:text="Gửi"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</LinearLayout>